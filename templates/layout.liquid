<!DOCTYPE html>
<html lang="{{ site.Language }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ item.Title }} | {{ site.Title }}</title>
    <meta name="description" content="{% if item.Description %}{{ item.Description }}{% else %}{{ site.Description }}{% endif %}">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ site.BaseUrl }}/favicon.ico">
    
    <!-- SEO / Open Graph -->
    <link rel="canonical" href="{{ item.Url }}">
    <link rel="alternate" type="application/rss+xml" title="{{ site.Title }} RSS Feed" href="{{ site.BaseUrl }}/feed.xml">
    <meta property="og:title" content="{{ item.Title }}">
    <meta property="og:description" content="{% if item.Description %}{{ item.Description }}{% else %}{{ site.Description }}{% endif %}">
    <meta property="og:url" content="{{ item.Url }}">
    <meta property="og:type" content="{% if item.Date %}article{% else %}website{% endif %}">
    <meta property="og:site_name" content="{{ site.Title }}">
    <meta property="og:locale" content="{{ site.Language }}">
    {% if item.Image %}
    <meta property="og:image" content="{{ item.Image }}">
    {% if item.ImageAlt %}<meta property="og:image:alt" content="{{ item.ImageAlt }}">{% endif %}
    {% elsif site.OgImage %}
    <meta property="og:image" content="{{ site.OgImage }}">
    <meta property="og:image:alt" content="{{ site.OgImageAlt }}">
    {% endif %}
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="{% if item.Image or site.OgImage %}summary_large_image{% else %}summary{% endif %}">
    {% if site.TwitterSite %}<meta name="twitter:site" content="{{ site.TwitterSite }}">{% endif %}
    {% if site.TwitterCreator %}<meta name="twitter:creator" content="{{ site.TwitterCreator }}">{% endif %}
    <meta name="twitter:title" content="{{ item.Title }}">
    <meta name="twitter:description" content="{% if item.Description %}{{ item.Description }}{% else %}{{ site.Description }}{% endif %}">
    {% if item.Image %}
    <meta name="twitter:image" content="{{ item.Image }}">
    {% if item.ImageAlt %}<meta name="twitter:image:alt" content="{{ item.ImageAlt }}">{% endif %}
    {% elsif site.OgImage %}
    <meta name="twitter:image" content="{{ site.OgImage }}">
    <meta name="twitter:image:alt" content="{{ site.OgImageAlt }}">
    {% endif %}

    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    {% include '_includes/header.liquid' %}
    <main>
        {{ content }}
    </main>
    <footer>
        <p>&copy; {{ date.now | date.to_string "%Y" }} {{ site.Title }}</p>
    </footer>
</body>
</html>
