{
  "name": "dotnet-ssg",
  "version": "1.0.0",
  "scripts": {
    "build": "dotnet run --project src/DotnetSsg && npm run css:build",
    "css:build": "tailwindcss -i ./content/static/css/input.css -o ./output/static/css/style.css --minify",
    "css:watch": "tailwindcss -i ./content/static/css/input.css -o ./output/static/css/style.css --watch",
    "serve": "cd output && python3 -m http.server 8000"
  },
  "devDependencies":  {
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.0"
  }
}