<footer class="border-t border-notion-gray-light dark:border-notion-gray-dark mt-auto">
    <div class="max-w-notion mx-auto px-6 md:px-24 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-notion-gray">
            <div class="flex flex-col items-center md:items-start gap-1">
                <p>&copy; @DateTime.Now.Year @Author. All rights reserved.</p>
                <p class="text-xs">Built with <a href="https://github.com/muho2019/dotnet-ssg" target="_blank" class="text-notion-blue hover:underline transition">dotnet-ssg</a></p>
            </div>
            
            <div class="flex gap-4">
                @if (!string.IsNullOrEmpty(RssUrl))
                {
                    <a href="@RssUrl" class="hover:text-notion-blue transition">
                        RSS
                    </a>
                }
                @if (!string.IsNullOrEmpty(GithubUrl))
                {
                    <a href="@GithubUrl" target="_blank" class="hover:text-notion-blue transition">
                        GitHub
                    </a>
                }
            </div>
        </div>
    </div>
</footer>

@code {
    [Parameter]
    public string Author { get; set; } = string.Empty;
    
    [Parameter]
    public string? RssUrl { get; set; }
    
    [Parameter]
    public string? GithubUrl { get; set; }
}