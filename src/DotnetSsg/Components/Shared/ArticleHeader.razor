@using DotnetSsg.Models
@namespace DotnetSsg.Components.Shared

@if (Content != null)
{
    <header class="mb-8 pb-8 border-b border-notion-gray-light dark:border-notion-gray-dark">
        <!-- Cover Image -->
        @if (!string.IsNullOrEmpty(Content.CoverImage))
        {
            <div class="mb-6 -mx-4 sm:mx-0 sm:rounded-lg overflow-hidden h-64 sm:h-80">
                <img src="@Content.CoverImage" alt="@Content.Title" class="w-full h-full object-cover" />
            </div>
        }
        
        <!-- Title -->
        <h1 class="text-notion-title text-4xl sm:text-5xl font-bold text-notion-text dark:text-notion-text-dark mb-4">
            @Content.Title
        </h1>
        
        <!-- Metadata for Post -->
        @if (Content is Post post)
        {
            <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-6 text-sm text-notion-gray dark:text-gray-400">
                <!-- Published Date -->
                <time datetime="@post.Date.ToString("yyyy-MM-dd")" class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>@post.Date.ToString("MMMM dd, yyyy")</span>
                </time>
                
                <!-- Reading Time Estimate -->
                <span class="hidden sm:inline text-notion-gray-light dark:text-gray-600">â€¢</span>
                <span class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>@CalculateReadingTime(Content.HtmlContent) min read</span>
                </span>
            </div>
            
            <!-- Tags -->
            @if (post.Tags != null && post.Tags.Count > 0)
            {
                <div class="mt-6 flex flex-wrap gap-2">
                    @foreach (var tag in post.Tags)
                    {
                        <a href="@($"{BaseUrl.TrimEnd('/')}/tags/{tag.ToLower()}/")" 
                           class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium 
                                  bg-notion-blue/10 dark:bg-blue-900/20 
                                  text-notion-blue dark:text-blue-400 
                                  hover:bg-notion-blue/20 dark:hover:bg-blue-900/30 
                                  transition-colors">
                            #@tag
                        </a>
                    }
                </div>
            }
        }
        
        <!-- Description for Page -->
        @if (Content is Page && !string.IsNullOrEmpty(Content.Description))
        {
            <p class="mt-4 text-lg text-notion-gray dark:text-gray-400">
                @Content.Description
            </p>
        }
    </header>
}

@code {
    [Parameter]
    public ContentItem? Content { get; set; }
    
    [Parameter]
    public string BaseUrl { get; set; } = "/";
    
    /// <summary>
    /// Calculate reading time in minutes based on HTML content
    /// Assumes average reading speed of 200 words per minute
    /// </summary>
    private int CalculateReadingTime(string htmlContent)
    {
        if (string.IsNullOrEmpty(htmlContent))
            return 1;
        
        // Remove HTML tags
        var plainText = System.Text.RegularExpressions.Regex.Replace(htmlContent, "<[^>]*>", " ");
        
        // Count words
        var words = plainText.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
        
        // Calculate reading time (200 words per minute)
        var readingTime = (int)Math.Max(1, Math.Round(words / 200.0));
        
        return readingTime;
    }
}
