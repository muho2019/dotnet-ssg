@using DotnetSsg.Models
@namespace DotnetSsg.Components.Shared

<article class="group border border-notion-gray-light dark:border-notion-gray-dark rounded-lg overflow-hidden hover:shadow-md dark:hover:shadow-lg transition-all duration-300 hover:border-notion-blue dark:hover:border-blue-500">
    <!-- Card Header -->
    <div class="p-6">
        <!-- Tags -->
        @if (Post.Tags != null && Post.Tags.Count > 0)
        {
            <div class="flex flex-wrap gap-2 mb-3">
                @foreach (var tag in Post.Tags.Take(3))
                {
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                 bg-notion-blue/10 dark:bg-blue-900/20 
                                 text-notion-blue dark:text-blue-400">
                        @tag
                    </span>
                }
            </div>
        }
        
        <!-- Title -->
        <h3 class="text-lg sm:text-xl font-semibold text-notion-text dark:text-notion-text-dark mb-2 group-hover:text-notion-blue dark:group-hover:text-blue-400 transition-colors">
            <a href="@Url" class="hover:underline">@Post.Title</a>
        </h3>
        
        <!-- Description -->
        @if (!string.IsNullOrEmpty(Post.Description))
        {
            <p class="text-sm text-notion-gray dark:text-gray-400 line-clamp-2 mb-4">
                @Post.Description
            </p>
        }
        
        <!-- Metadata -->
        <div class="flex flex-wrap items-center gap-4 text-xs text-notion-gray dark:text-gray-500">
            <time datetime="@Post.Date.ToString("yyyy-MM-dd")" class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>@Post.Date.ToString("MMM dd, yyyy")</span>
            </time>
            
            <span class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>@CalculateReadingTime(Post.HtmlContent) min</span>
            </span>
        </div>
    </div>
    
    <!-- Card Footer -->
    <div class="px-6 py-3 bg-notion-gray-light/50 dark:bg-notion-gray-dark/50 border-t border-notion-gray-light dark:border-notion-gray-dark">
        <a href="@Url" class="inline-flex items-center space-x-2 text-sm font-medium text-notion-blue dark:text-blue-400 group-hover:translate-x-1 transition-transform">
            <span>Read More</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </a>
    </div>
</article>

@code {
    [Parameter]
    public Post Post { get; set; } = new();
    
    [Parameter]
    public string Url { get; set; } = "#";
    
    /// <summary>
    /// Calculate reading time in minutes based on HTML content
    /// Assumes average reading speed of 200 words per minute
    /// </summary>
    private int CalculateReadingTime(string htmlContent)
    {
        if (string.IsNullOrEmpty(htmlContent))
            return 1;
        
        // Remove HTML tags
        var plainText = System.Text.RegularExpressions.Regex.Replace(htmlContent, "<[^>]*>", " ");
        
        // Count words
        var words = plainText.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
        
        // Calculate reading time (200 words per minute)
        var readingTime = (int)Math.Max(1, Math.Round(words / 200.0));
        
        return readingTime;
    }
}
